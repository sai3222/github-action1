name: Main header-2
on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
jobs:
  example-job1:
    runs-on: ubuntu-latest
    #name: Save output1
    steps:
      - shell: bash
        run: |
          expr 1 + 1 > output.log1
      - name: Upload output file
        uses: actions/upload-artifact@v3
        with:
          name: output-log-file
          path: output.log1
          
  example-job2:
    needs: [example-job1]
    runs-on: ubuntu-latest
    name: Save output2
    steps:
      - shell: bash
        run: |
          expr 4 + 6 > output.log2
      - name: Upload output file
        uses: actions/upload-artifact@v3
        with:
          name: output-log-file
          path: output.log2
  download-example-job:
    steps:
      - name: Download a single artifact1
        uses: actions/download-artifact@v3
        with:
          name: output-log-file1
  example-job:
    steps:
      - name: Download a single artifact2
        uses: actions/download-artifact@v3
        with:
          name: output-log-file2          
